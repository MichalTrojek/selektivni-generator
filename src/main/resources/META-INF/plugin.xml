<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique id for this plugin. Must stay constant for the life of the plugin. -->
    <id>com.github.michaltrojek.selektivni-generator</id>
    <!-- Text to display as name on Settings | Plugin page -->
    <name>Selektivní Generator</name>
    <!-- Text to display as company information on Settings | Plugin page -->
    <vendor>michaltrojek</vendor>

    <!-- Indicate this plugin can be loaded in all IntelliJ Platform-based products. -->
    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>plugin</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Selektivní Generator" anchor="right" factoryClass="PluginToolWindowFactory" icon="/icons/swagger.svg"/>
        <applicationService serviceImplementation="PluginState" />
    </extensions>

</idea-plugin>
